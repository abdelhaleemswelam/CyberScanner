<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CyberScanner.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Settings"
             x:DataType="viewmodels:SettingsViewModel"
             xmlns:viewmodels="clr-namespace:CyberScanner.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:SettingsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
              RowSpacing="20"
              Padding="10">

            <!-- Header -->
            <Border Grid.Row="0" 
                    Stroke="{StaticResource NeonCyan}"
                    StrokeThickness="1"
                    Background="{StaticResource DarkCard}"
                    Padding="15">
                <VerticalStackLayout Spacing="5">
                    <Label Text="APPLICATION SETTINGS" 
                           Style="{StaticResource HeaderLabel}"
                           TextColor="{StaticResource NeonCyan}"/>
                    <Label Text="Configure CyberScanner behavior and preferences" 
                           Style="{StaticResource SubHeaderLabel}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Scanning Settings -->
            <Border Grid.Row="1"
                    Stroke="{StaticResource NeonPurple}"
                    StrokeThickness="1"
                    Background="{StaticResource DarkCard}"
                    Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="SCANNING SETTINGS" 
                           TextColor="{StaticResource NeonPurple}"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Default Timeout (ms)" 
                               TextColor="{StaticResource TextSecondary}"/>
                        <Entry Grid.Row="1" Grid.Column="0" 
                               Text="{Binding DefaultTimeout}"
                               Keyboard="Numeric"/>

                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="Max Threads" 
                               TextColor="{StaticResource TextSecondary}"/>
                        <Entry Grid.Row="1" Grid.Column="1" 
                               Text="{Binding DefaultMaxThreads}"
                               Keyboard="Numeric"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Results Settings -->
            <Border Grid.Row="2"
                    Stroke="{StaticResource DarkCard}"
                    StrokeThickness="1"
                    Background="{StaticResource DarkCard}"
                    Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="RESULTS SETTINGS" 
                           TextColor="{StaticResource NeonCyan}"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Spacing="10">
                            <CheckBox IsChecked="{Binding AutoSaveResults}"
                                      Color="{StaticResource NeonCyan}"/>
                            <Label Text="Auto-save scan results" 
                                   TextColor="{StaticResource TextSecondary}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="10">
                            <CheckBox IsChecked="{Binding PlaySounds}"
                                      Color="{StaticResource NeonPurple}"/>
                            <Label Text="Play completion sounds" 
                                   TextColor="{StaticResource TextSecondary}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Results Folder -->
                 
                </VerticalStackLayout>
            </Border>

            <!-- Appearance Settings -->


            <!-- Action Buttons -->
            <StackLayout Grid.Row="4"
                         Orientation="Horizontal"
                         Spacing="15"
                         HorizontalOptions="Center">
                <Button Text="Save Settings" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource NeonCyanButton}"
                        WidthRequest="150"/>

                <Button Text="Reset to Defaults" 
                        Command="{Binding ResetCommand}"
                        Style="{StaticResource NeonPurpleButton}"
                        WidthRequest="150"/>
            </StackLayout>



        </Grid>
    </ScrollView>

</ContentPage>