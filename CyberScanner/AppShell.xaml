<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="CyberScanner.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CyberScanner.Views"
       Title="CyberScanner"
       FlyoutBehavior="Flyout"
       Shell.FlyoutBackground="{StaticResource DarkBackground}"
       Shell.NavBarHasShadow="True">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="120" BackgroundColor="{StaticResource DarkBackground}">
            <Border Stroke="{StaticResource NeonPurple}"
                    StrokeThickness="1"
                    Background="{StaticResource DarkCard}"
                    Margin="10">
                <Grid Padding="15">
                    <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                        <Label Text="CYBERSCANNER" 
                               FontSize="20"
                               TextColor="{StaticResource NeonCyan}"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Network Analysis Suite"
                               FontSize="12"
                               TextColor="{StaticResource NeonPurple}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>
    </Shell.FlyoutHeader>

    <ShellContent Title="Dashboard" 
                  Icon="dashboard.png"
                  ContentTemplate="{DataTemplate views:DashboardPage}"
                  Route="Dashboard" />

    <ShellContent Title="IP Scanner" 
                  Icon="scanner.png"
                  ContentTemplate="{DataTemplate views:IpScannerPage}"
                  Route="IpScanner" />

    <ShellContent Title="Port Scanner" 
                  Icon="port.png"
                  ContentTemplate="{DataTemplate views:PortScannerPage}"
                  Route="PortScanner" />

    <ShellContent Title="Settings" 
                  Icon="settings.png"
                  ContentTemplate="{DataTemplate views:SettingsPage}"
                  Route="Settings" />

    <ShellContent Title="About" 
                  Icon="info.png"
                  ContentTemplate="{DataTemplate views:AboutPage}"
                  Route="About" />

</Shell>