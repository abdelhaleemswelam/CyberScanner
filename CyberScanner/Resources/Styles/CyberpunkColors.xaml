<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cyberpunk Color Palette -->
    <Color x:Key="DarkBackground">#0A0A0F</Color>
    <Color x:Key="DarkCard">#151520</Color>
    <Color x:Key="NeonPurple">#C000FF</Color>
    <Color x:Key="NeonCyan">#00E5FF</Color>
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B0B0C0</Color>
    <Color x:Key="Success">#00FF88</Color>
    <Color x:Key="Warning">#FFAA00</Color>
    <Color x:Key="Error">#FF4444</Color>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="NeonPurpleGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#C000FF" Offset="0"/>
        <GradientStop Color="#9D00CC" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NeonCyanGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00E5FF" Offset="0"/>
        <GradientStop Color="#00B8CC" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>